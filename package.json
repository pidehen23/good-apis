{
    "name": "good-apis",
    "version": "0.0.9",
    "description": "基于axios统一接口请求方案",
    "main": "dist/index.js",
    "module": "dist/index-esm-min.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "license": "ISC",
    "author": "chenjiajing",
    "private": false,
    "homepage": "https://github.com/chenjiajing23/apis",
    "repository": {
        "type": "git",
        "url": "git@github.com:chenjiajing23/apis.git",
        "directory": "packages/good-apis"
    },
    "publishConfig": {
        "registry": "https://registry.npmjs.org/"
    },
    "keywords": [
        "apis",
        "axios",
        "typescript"
    ],
    "scripts": {
        "build": "npm run clear && tsc",
        "dev": "tsc -w",
        "clear": "rimraf dist",
        "fix": "eslint src --ext .tsx,.ts --color --fix",
        "test": "parcel test/index.html --out-dir test/dist",
        "gc": "git-cz",
        "patch": "standard-version -r patch",
        "minor": "standard-version -r minor",
        "major": "standard-version -r major",
        "pub": "npm run build && npx git push --follow-tags origin master && npx npm publish --access=public"
    },
    "peerDependencies": {
        "axios": "^0.21.1"
    },
    "dependencies": {},
    "devDependencies": {
        "@babel/core": "^7.12.3",
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@types/node": "^14.14.2",
        "@typescript-eslint/parser": "^4.5.0",
        "axios": "^0.21.1",
        "commitizen": "^4.2.2",
        "eslint": "^7.11.0",
        "eslint-config-prettier": "^6.14.0",
        "husky": "^4.3.0",
        "lint-staged": "^10.4.2",
        "parcel": "^1.12.4",
        "prettier": "^2.1.2",
        "rimraf": "^3.0.2",
        "standard-version": "^9.0.0",
        "typescript": "^4.0.3"
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-conventional-changelog"
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run fix  && lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "*.{js,ts,tsx,jsx}": [
            "prettier --write",
            "git add"
        ]
    }
}
